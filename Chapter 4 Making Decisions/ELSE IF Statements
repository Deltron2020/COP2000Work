// this program demonstrates else if statements
#include <iostream> 
using namespace std;

int main ()
{
  const int A_SCORE = 90,
            B_SCORE = 80,
            C_SCORE = 70,
            D_SCORE = 60;
  
  int testScore; // to hold the numeric value test score

  // Get the numeric test score
  cout << "Enter your numeric test score and \n";
  cout << "I will tell you what grade you earned.\n";
  cin >> testScore;

  // Determine the letter grade
  if (testScore >= A_SCORE)
    cout << "You got an A!\n";
  else if (testScore >= B_SCORE)
   cout << "You got an B!\n";
  else if (testScore >= C_SCORE)
   cout << "You got an C!\n";
  else if (testScore >= D_SCORE)
   cout << "You got an D!\n";
  else if (testScore >= 0)
    cout << "You Failed.\n";
  else
    cout << "Invalid test score.\n";

  return 0;
}