// This program asks the user to enter the length and width of a rectangle
// It calculates the area and displays the value on screen

#include <iostream>
using namespace std;

int main()
{
  int length, width, area; 

  cout << "This program calculates the area of a ";
  cout << "rectangle.\n";
  cout << "What is the length of the rectangle?\n";
  cin >> length;
  cout << "What is the width of the rectangle?\n";
  cin >> width;
  area = length * width;
  cout << "The area of a rectangle is " << area << "." << endl;
  return 0;
  
}