#include <iostream> 
#include <cmath>
using namespace std;

int main()
{
  double test1, test2, test3; // to hold the test scores
  double average; // to hold the average scores

  // Get the three test scores
  cout << "Enter the first test score: \n";
  cin >> test1;
  cout << "Enter the second test score: \n";
  cin >> test2;
  cout << "Enter the third test score: \n";
  cin >> test3;

  average = (test1 + test2 + test3) / 3;
  
  cout << "The average test score is " << average << ".";
  return 0;
}